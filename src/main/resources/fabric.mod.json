{
  "schemaVersion": 1,
  "id": "modid",
  "version": "${version}",

  "name": "Fabric Opportunities",
  "description": "A mod providing missed opportunities for minecraft, inspired by the «Minecraft opportunities» series by Cubfan.",
  "authors": [
    "Me!"
  ],
  "contact": {
    "homepage": "https://mc.eragon.re/fabric-opportunities",
    "sources": "https://github.com/Eragonfr/fabric-opportunities"
  },

  "license": "BSD-3.0",
  "icon": "assets/opportunities/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fabricmc.opportunities.Opportunities"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
